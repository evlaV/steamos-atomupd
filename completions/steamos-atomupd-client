_steamos-atomupd-client()
{
    local cur prev words cword
    _init_completion || return

    case "$prev" in
        -c|--config|--manifest-file|--update-file)
            _filedir
            return
            ;;
    esac

    COMPREPLY=($(compgen -W "-h --help -c --config -q --quiet -d --debug -f --force --query-only --manifest-file --mk-manifest-file --update-file" -- "$cur"))
} &&
complete -F _steamos-atomupd-client steamos-atomupd-client
